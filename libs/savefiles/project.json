{
  "name": "savefiles",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/savefiles/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/savefiles",
        "main": "libs/savefiles/src/index.ts",
        "tsConfig": "libs/savefiles/tsconfig.lib.json",
        "assets": ["libs/savefiles/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/savefiles/jest.config.ts"
      }
    }
  }
}
